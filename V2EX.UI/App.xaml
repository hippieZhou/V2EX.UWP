<Application
    x:Class="V2EX.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:V2EX.UI"
    xmlns:vms="using:V2EX.UI.ViewModels"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="PCWindowWidth">1024</x:Double>
            <x:Double x:Key="TableWindowWidth">720</x:Double>
            <SolidColorBrush x:Key="ThemeBaseBackground" Color="#455A64" />
            <SolidColorBrush x:Key="ThemeBaseLightBackground" Color="#FAFAFA" />

            <vms:ViewModelLocator x:Key="Locator" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/NavigationMenuButton.xaml" />
                <ResourceDictionary Source="Styles/TabPivot.xaml" />
                <ResourceDictionary Source="Styles/TabHeaderRadioButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
