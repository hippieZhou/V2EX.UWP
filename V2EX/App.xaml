<Application
    x:Class="V2EX.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:V2EX.Converters"
    xmlns:local="using:V2EX"
    xmlns:vm="using:V2EX.ViewModels"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" />
            <c:StringFormateValueConverter x:Key="StringFormateValueConverter" />
            <c:DateTimeValueConverter x:Key="DateTimeValueConverter" />
            <c:TabMenuValueConverter x:Key="TabMenuValueConverter" />

            <x:Double x:Key="Breakpoint640Plus">641</x:Double>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="/Styles/NavigationView.xaml" />-->
                <ResourceDictionary Source="/Styles/ScrollBar.xaml" />
                <ResourceDictionary Source="/Styles/RadioButton.xaml" />
                <ResourceDictionary Source="/Styles/Pivot.xaml" />
                <!--<ResourceDictionary Source="/Styles/Button.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
